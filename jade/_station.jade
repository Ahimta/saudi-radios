mixin station(id, file, image, title, autoStart)
  if file
    script window.saudiRadios.registerStation('#{id}', '#{file}', '#{image}', '#{title}', #{autoStart})
  article.col-md-6
    div.panel.panel-primary.text-center
      header.panel-heading= title
      div.panel-body
        article: audio(name='media' style='width: 100%; display: none' controls)
          source(type='application/vnd.apple.mpegurl' src=file)
        article: div(id=id style='display: none')